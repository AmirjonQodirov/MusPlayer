<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/music_item_background"
    android:gravity="center"
    android:orientation="horizontal"
    tools:ignore="HardcodedText"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:elevation="5dp"
    >

    <ImageView
        android:id="@+id/song_play"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_play"
        app:tint="@color/main_gray"
        android:contentDescription="play_icon"
        />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perfect"
            android:lines="1"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:textColor="@color/main_gray"
            />

        <TextView
            android:id="@+id/song_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="song_author"
            android:layout_below="@+id/song_title"
            android:fontFamily="sans-serif"
            android:layout_marginTop="5dp"
            android:lines="1"
            android:textSize="12sp"
            android:textColor="@color/main_gray"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/song_more"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_more"
        app:tint="@color/main_gray"
        android:contentDescription="more_icon"
        />
</LinearLayout>